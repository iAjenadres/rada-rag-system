# RADA - Environment Variables Template
# Copy this file to .env and add your credentials

# Required - Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Confluence Integration (Optional)
CONFLUENCE_URL=https://your-company.atlassian.net
CONFLUENCE_USERNAME=your.email@company.com
CONFLUENCE_API_TOKEN=your_confluence_token_here
CONFLUENCE_SPACE_KEY=YOUR_SPACE
CONFLUENCE_TARGET_FOLDER_ID=folder_id_number

# System Configuration (Optional)
CONFLUENCE_MAX_DEPTH=6
CONFLUENCE_MIN_CONTENT_SIZE=20
CONFLUENCE_EXTRACT_RELATED=true
CONFLUENCE_PRESERVE_TABLES=true
RAG_SIMILARITY_THRESHOLD=0.05
RAG_MAX_CHUNKS=12

# Model Configuration (Optional)
DEFAULT_MODEL=gemma2:2b
OLLAMA_BASE_URL=http://localhost:11434